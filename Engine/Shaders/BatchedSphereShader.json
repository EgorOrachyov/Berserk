{
  "Description": "Batched elements (spheres) rendering",
  "Author": "Egor Orachyov",
  "Version": "1.0",
  "Created": "31.07.2020",
  "Type": "Program",
  "Platforms": {
    "OpenGL": {
      "Vertex": "Engine/Shaders/OpenGL/BatchedSphereShaderVert.glsl",
      "Fragment": "Engine/Shaders/OpenGL/BatchedSphereShaderFrag.glsl",
      "Version": "410 core",
      "Language": "GLSL"
    }
  },
  "Declaration": {
    "Name": "inPos|inWorldPos.inColor.inRadius",
    "Buffers": [
      {
        "Name": "inPos",
        "Iterating": "PerVertex",
        "Elements": [ { "Name": "inPos", "Type": "Float3" } ]
      },
      {
        "Name": "inWorldPos.inColor.inRadius",
        "Iterating": "PerInstance",
        "Elements": [ { "Name": "inWorldPos", "Type": "Float3"}, { "Name": "inColor", "Type": "Float3"}, { "Name": "inRadius", "Type": "Float1" } ]
      }
    ]
  }
}