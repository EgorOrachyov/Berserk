<?xml version="1.0" encoding="us-ascii"?>

<!-- Test shader for OpenGL driver and shader importer -->
<!-- Note: {SHADERS} - variable, which contains global -->
<!-- path to the shader source folder                  -->

<program name="FrameRender">
    <driver name="OpenGL">
        <shaders>
            <shader type="VERTEX"   path="{SHADERS}/Debug/FrameRender/GLSLTest.vert" />
            <shader type="FRAGMENT" path="{SHADERS}/Debug/FrameRender/GLSLTest.frag" />
        </shaders>
        <uniforms>
            <uniform name="Texture0"/>
            <uniform name="CameraPosition"/>
            <uniform name="LightPosition"/>
        </uniforms>
        <uniformblocks>
            <uniformblock name="Transformation" binding="0" />
        </uniformblocks>
    </driver>
</program>